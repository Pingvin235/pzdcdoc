<?xml version="1.0" encoding="utf-8"?>
<!-- configuration file, may be placed in the same directory with .adoc file -->
<pzdcdoc>
	<!-- these attributes applied to each of processed files, may be extended/overvritten in deeper pzdcdoc.xml files and inside the files themself -->
	<attributes>
		<!-- the path with main doc sources -->
		<doc-path>src/doc</doc-path>
		<!-- use your own favicon URL instead -->
		<favicon>https://bgerp.org/img/favicon-doc.svg</favicon>
		<!-- source link root -->
		<pzdc-source-link-root>https://github.com/Pingvin235/pzdcdoc/blob/master</pzdc-source-link-root>

		<!-- sample of labels customization
		https://asciidoctor.org/docs/user-manual/#customizing-labels
		https://github.com/asciidoctor/asciidoctor/blob/master/lib/asciidoctor/document.rb#L255
		
		<appendix-caption>Приложение</appendix-caption>
		<caution-caption>Внимание</caution-caption>
		<example-caption>Пример</example-caption>
		<figure-caption>Рисунок</figure-caption>
		<important-caption>Важно</important-caption>
		<manname-title>НАЗВАНИЕ</manname-title>
		<note-caption>Примечание</note-caption>
		<table-caption>Таблица</table-caption>
		<tip-caption>Подсказка</tip-caption>
		<toc-title>Содержание</toc-title>
		<untitled-label>Без названия</untitled-label>
		<version-label>Версия</version-label>
		<warning-caption>Предупреждение</warning-caption>
		-->
	</attributes>
</pzdcdoc>